@model RequestingUnsubscibeViewModel
@{
    ViewData["Title"] = "Unsubscribe Requesting";
    Layout = "_UnauthenticatedLayout";
}

<div class="text-center mb-3">
    <h1 class="display-4">Request Unsubscribe</h1>
    <p class="fst-italic fs-6">Please enter your email into the below form to request an unsubscription email</p>
</div>

<form asp-action="Requesting">
    <div class="row mt-3">
        <div class="col-sm-12">
            <label asp-for="@Model.Email" class="form-label">Email</label>
            <input asp-for="@Model.Email" class="form-control" placeholder="Email">
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-sm-4">
            <button id="submit-button" class="btn btn-outline-success" type="submit">Request</button>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        // Add a on-click listener to the submit button
        $("#submit-button").click(function (e) {
            // Set the button to disabled
            $("#submit-button").prop("disabled", true);
            // Set the button text to be "Requesting..."
            $("#submit-button").text("Requesting...");
        });
    </script>
}