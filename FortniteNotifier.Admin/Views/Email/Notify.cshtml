@model NotifyEmailViewModel

@{
    ViewData["Title"] = "Notify Recipients";
}

<div class="text-center mb-3">
    <h1 class="display-4">Notify Recipients</h1>
    <p class="fst-italic fs-6">Notify users of any changes or important information</p>
</div>

<form asp-action="SendNotifyEmail" asp-controller="Email">
    <div class="row mt-3">
        <div class="col-sm-12">
            <label asp-for="@Model.Subject" class="form-label">Subject</label>
            <input asp-for="@Model.Subject" class="form-control" placeholder="Subject">
            <span asp-validation-for="@Model.Subject" class="text-danger"></span>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-sm-12">
            <p class="fst-italic fs-6">Enter the body of the email in HTML format</p>
            <label asp-for="@Model.Body" class="form-label">Body</label>
            <textarea asp-for="@Model.Body" class="form-control" placeholder="Body" rows="3"></textarea>
            <span asp-validation-for="@Model.Body" class="text-danger"></span>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-sm-12">
            <label asp-for="@Model.CCRecipient" class="form-label">CC Recipient</label>
            <input asp-for="@Model.CCRecipient" class="form-control" placeholder="CC Recipient">
            <span asp-validation-for="@Model.CCRecipient" class="text-danger"></span>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-sm-12 form-check" style="margin-left: 12px">
            <label asp-for="@Model.IncludeDisabled" class="form-check-label">Include Disabled?</label>
            <input asp-for="@Model.IncludeDisabled" type="checkbox" class="form-check-input">
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-sm-4">
            <button id="submit-button" class="btn btn-outline-primary" type="submit">Send Email</button>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        // Add a on-click listener to the submit button
        $("#submit-button").click(function (e) {
            // Set the button to disabled
            $("#submit-button").prop("disabled", true);
            // Set the button text to be "Sending..."
            $("#submit-button").text("Sending...");
        });
    </script>
}